<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gallery_background" 
    android:padding="5dp"
    android:id="@+id/item_list_view_layout">

    <TextView
        android:id="@+id/item_title"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/item_list_view_no_title"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/item_description"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/item_title"
        android:layout_marginTop="24dp"
        android:text="@string/item_list_view_no_description" />

    <TextView
        android:id="@+id/item_owner"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/item_description"
        android:text="@string/item_list_view_no_author"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="wrap_content"
        android:layout_height="100sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10sp" 
        android:padding="2dp"
        android:src="@android:drawable/ic_dialog_info" 
        android:contentDescription="@string/item_list_view_no_image"/>

</RelativeLayout>